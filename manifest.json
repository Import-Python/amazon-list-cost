{
  "manifest_version": 2,

  "name": "Amazon List Cost Calculator",
  "description": "Adds amount of money based on a list!",
  "version": "1.1",

  "content_scripts":  [ {
    "js":       ["jquery.js", "content.js"],
    "matches":  ["https://www.amazon.com/gp/registry/wishlist/*"
  ]
  } ],

  "icons": { "16": "icon.png",
           "48": "icon.png",
          "128": "icon.png" },

  "browser_action": {
   "default_icon": "icon.png"
  },
  "permissions": [
   "activeTab"
   ]
}
